<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/imageViewBookCover"
        android:layout_width="48dp"
        android:layout_height="72dp"
        android:scaleType="centerCrop"
        android:layout_marginEnd="16dp"
        tools:src="@drawable/library_books_24px" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewBookTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="The Total Money Makeover: A Classic Edition" />

        <TextView
            android:id="@+id/textViewBookAuthor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            android:textColor="?android:attr/textColorSecondary"
            android:layout_marginTop="2dp"
            tools:text="By Dave Ramsey" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageViewOpenLink"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/open_in_new_24px"
        app:tint="?attr/colorControlNormal"
        android:layout_marginStart="8dp"
        android:contentDescription="Open link"/>

</LinearLayout>
